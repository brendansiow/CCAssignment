<div class="ui aligned center aligned grid">
    <div style="width:500px;text-align:center;margin-top:20px">
        <div class="ui segment">
            <h2 class="ui teal header">
                Hi, {{user.name}} {{#if port.port_name}} ({{port.port_name}}) {{/if}}
            </h2>
        </div>
        {{#unless user.portid}}
        <a href="/shipping/add">
            <button class="ui teal button">Add New Shipping Request</button>
        </a>
        {{/unless}}
    </div>
    <div class="row" style="margin-top:20px">
        <table class="ui celled table" style="width:800px">
            <thead>
                <tr>
                    <th>Shipping ID</th>
                    <th>Depart Port</th>
                    <th>Arrival Port</th>
                    <th>Requested Date</th>
                    <th>Status</th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                {{#each shippinglist}}
                <tr>
                    <td>{{shipping_id}}</td>

                    {{#when ../port.port_name 'eq' shipping_departure_port}}
                    <td>
                        <b style="color:teal">{{shipping_departure_port}}</b>
                    </td>
                    {{else}}
                    <td>
                        {{shipping_departure_port}}
                    </td>
                    {{/when}} {{#when ../port.port_name 'eq' shipping_arrival_port}}
                    <td>
                        <b style="color:teal">{{shipping_arrival_port}}</b>
                    </td>
                    {{else}}
                    <td>
                        {{shipping_arrival_port}}
                    </td>
                    {{/when}}
                    <td>{{shipping_date}}</td>
                    {{#when shipping_status 'eq' "Cancelled" }}
                    <td style="color:red">{{shipping_status}}</td>
                    {{else}} {{#when shipping_status 'eq' "Rejected" }}
                    <td style="color:red">{{shipping_status}}</td>
                    {{else}} {{#when shipping_status 'eq' "Delivered"}}
                    <td style="color:green">{{shipping_status}}</td>
                    {{else}} {{#when shipping_status 'eq' "Shipping"}}
                    <td style="color:blue">{{shipping_status}}</td>
                    {{else}} {{#when shipping_status 'eq' "Approved"}}
                    <td style="color:green">{{shipping_status}}</td>
                    {{else}}
                    <td style="color:orange">{{shipping_status}}</td>{{/when}} {{/when}} {{/when}} {{/when}} {{/when}}

                    <td>
                        <a href="/shipping/edit/{{shipping_id}}">
                            <div class="ui secondary animated button" tabindex="0">
                                <div class="visible content">
                                    <i class="right arrow icon"></i>

                                </div>
                                <div class="hidden content">
                                    Go
                                </div>

                            </div>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
</div>